@model ProductoViewModel

<a asp-controller="Producto" asp-action="CrearProducto">Crear producto</a>

<div class=" col-12">

    <h1 class="col-12" style="text-align-last: center; margin-top: 20px;">Productos</h1>
    <table class="table table-hover col-11 table-bordered" style="text-align: center;" id="tbl_productos">

        @foreach (var producto in Model.Productos)
        {

            <thead>
                <tr class="table-dark">
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Precio</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @producto.Id
                    </td>
                    <td>
                        @producto.Nombre
                    </td>
                    <td>
                        @producto.Descripcion
                    </td>
                    <td>
                        @producto.Id
                    </td>
                </tr>
            </tbody>


        }

    </table>
</div>
