@model FacturaViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1 class="display-3 col-12" style="text-align-last: center;">Facturas</h1>

<hr class="my-4">

<div class=" col-12">
    <table class="table table-hover col-11 table-bordered" style="text-align: center;" id="tbl_facturas">
        <thead>
            <tr class="table-dark">
                <th scope="col">Id factura</th>
                <th scope="col">Id carrito</th>
                <th scope="col">Nombre usuario</th>
                <th scope="col">Correo</th>
                <th scope="col">Telefono</th>
                <th scope="col">Método pago</th>
                <th scope="col">Total</th>
            </tr>
        </thead>
        @foreach (var factura in Model.Facturas)
        {
            <tbody>
                <tr>
                    <td>
                        @factura.Id
                    </td>
                    <td>
                        @factura.IdCarrito
                    </td>
                    <td>
                        @factura.NombreUsuario
                    </td>
                    <td>
                        @factura.CorreoUsuario
                    </td>
                    <td>
                        @factura.TelefonoUsuario
                    </td>
                    <td>
                        @factura.MetodoPago
                    </td>
                    <td>
                        @factura.TotalPagp
                    </td>
                    <td>
                        <a href="#"><i class="fas fa-eye" style="color: #772953; margin-left: 5px;"></i></a>
                        <a href="#"><i class="fas fa-edit" style="color: #772953; margin-left: 5px;"></i></a>
                    </td>

                </tr>
            </tbody>
        }
    </table>

</div>
