<h1 class="display-3 col-12" style="text-align-last: center;">Carrito de comprass</h1>

<hr class="my-4">

@foreach (var producto in Model.Carrito)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Descripción</th>
                <th scope="col">Id</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @producto.Nombre
                </td>
                <td>
                    @producto.Descripcion
                </td>
                <td>
                    @productos.Id
                </td>
            </tr>
        </tbody>
    </table>
}